<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.javaFX.controller.ListController" spacing="10">
    <padding>
        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
    </padding>

    <!-- Заголовок -->
    <Label text="DataStructLab - Визуализация двусвязного списка">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <!-- Панель управления -->
    <HBox spacing="15">
        <padding>
            <Insets top="0.0" right="0.0" bottom="10.0" left="0.0" />
        </padding>
        <VBox spacing="5">
            <Label text="Выберите тип данных:"/>
            <ComboBox fx:id="typeComboBox" prefWidth="150" />
        </VBox>

        <VBox spacing="5">
            <Label text="Операции:"/>
            <HBox spacing="5">
                <Button text="Добавить элемент" onAction="#onAddToEnd"/>
                <Button text="Вставить элемент" onAction="#onInsertAtIndex"/>
                <Button text="Найти элемент" onAction="#onSearchElement"/>
                <Button text="Удалить элемент" onAction="#onRemoveElement"/>
                <Button text="Сортировать" onAction="#onSortList"/>
                <Button text="Очистить" onAction="#onClearList"/>
            </HBox>
        </VBox>
    </HBox>

    <!-- Область ввода -->
    <GridPane hgap="10" vgap="10" style="-fx-border-color: #cccccc; -fx-border-width: 1;">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="200"/>
            <ColumnConstraints prefWidth="100"/>
        </columnConstraints>

        <Label text="Значение:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="valueTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Введите значение элемента"/>
        <!--        <Button text="Добавить в конец" onAction="#onAddToEnd" GridPane.rowIndex="0" GridPane.columnIndex="2"/>-->

        <Label text="Позиция:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="indexTextField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Введите индекс (с 0)"/>
        <!--        <Button text="Вставить по индексу" onAction="#onInsertAtIndex" GridPane.rowIndex="1" GridPane.columnIndex="2"/>-->
    </GridPane>

    <!-- Визуализация списка -->
    <VBox spacing="10">
        <Label text="Визуализация списка:"/>
        <ScrollPane fx:id="listScrollPane" prefHeight="200" style="-fx-border-color: #e0e0e0; -fx-border-width: 1;">
            <HBox fx:id="listVisualization" spacing="2" style="-fx-alignment: center-left;">
                <padding>
                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                </padding>
            </HBox>
        </ScrollPane>
    </VBox>

    <!-- Отображение содержимого списка -->
    <VBox spacing="10">
        <Label text="Содержимое списка:"/>
        <TableView fx:id="listTableView" prefHeight="150">
            <placeholder>
                <Label text="Список пуст"/>
            </placeholder>
            <columns>
                <TableColumn text="Индекс" prefWidth="80" fx:id="indexColumn"/>
                <TableColumn text="Значение" prefWidth="200" fx:id="valueColumn"/>
                <TableColumn text="Тип" prefWidth="150" fx:id="typeColumn"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Статус и информация -->
    <HBox spacing="20">
        <VBox spacing="5" prefWidth="300">
            <Label text="Статус:"/>
            <TextArea fx:id="statusTextArea" prefHeight="80" editable="false"/>
        </VBox>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Журнал операций:"/>
            <TextArea fx:id="logTextArea" prefHeight="80" editable="false"/>
        </VBox>
    </HBox>

    <!-- Файловые операции -->
    <HBox spacing="10">
        <padding>
            <Insets top="10.0" right="0.0" bottom="0.0" left="0.0" />
        </padding>
        <Label text="Файловые операции:"/>
        <!--        <Button text="Сохранить в файл" onAction="#onSaveToFile"/>-->
        <!--        <Button text="Загрузить из файла" onAction="#onLoadFromFile"/>-->
        <Button text="Экспорт в JSON" onAction="#onExportToJson"/>
        <Button text="Импорт из JSON" onAction="#onImportFromJson"/>
        <Button text="Экспорт в бинарный" onAction="#onExportToBinary"/>
        <Button text="Импорт из бинарного" onAction="#onImportFromBinary"/>
    </HBox>

</VBox>